{
    "name": "sanpi/behatch-contexts",
    "description": "Behatch contexts",
    "keywords": ["BDD", "Behat", "Symfony2", "Context"],
    "type": "library",

    "require": {
        "behat/behat": "*",
        "behat/mink": "*",
        "behat/mink-extension": "*",
        "justinrainbow/json-schema": "*"
    },

    "require-dev": {
        "behat/mink-goutte-driver": "*",
        "behat/mink-selenium2-driver": "*"
    },

    "autoload": {
        "psr-0": {
            "Sanpi\\Behatch": "src/"
        }
    },

    "config": {
        "bin-dir": "bin/"
    }
}
